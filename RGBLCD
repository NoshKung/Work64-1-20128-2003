//Code RGB
//YWROBOT
//Compatible with the Arduino IDE 1.0
//Library version:1.1
#include <LiquidCrystal_I2C.h>

LiquidCrystal_I2C lcd(0x27,20,4);  // set the LCD address to 0x27 for a 16 chars and 2 line display

int analogPin = 0; //ประกาศตัวแปร ให้ analogPin แทนขา analog ขาที่5
int val = 0;
int led1 = 5;
int RGB1 = 8;
int RGB2 = 9;
int RGB3 = 10;

void setup()
{
   Serial.begin(9600);
   pinMode(led1, OUTPUT);
   pinMode(RGB1, OUTPUT);
   pinMode(RGB2, OUTPUT);
   pinMode(RGB3, OUTPUT);
  lcd.init();                      // initialize the lcd

}


void loop(){
  val = analogRead(analogPin);  //อ่านค่าสัญญาณ analog ขา5 เว็บไว้ในตัวแปร val
  if(val>0){
        digitalWrite(led1, HIGH);
    }
    else{
        digitalWrite(led1, LOW);
    }

//-----------------------------------------------------------------------------------------------

    if(val>300){
        delay(50);
        digitalWrite(RGB1, LOW);
    }
    else{
        digitalWrite(RGB1, HIGH);
        delay(50);

//-----------------------------------------------------------------------------------------------

    }
     if(val>=301){
        digitalWrite(RGB2, HIGH);
    }
    else{
        digitalWrite(RGB2, LOW);
        delay(50);
    }
    if(val<601){
        digitalWrite(RGB2, HIGH);
    }
    else{
        digitalWrite(RGB2, LOW);
        delay(50);
    }
     if(val<=300){
        digitalWrite(RGB2, LOW);

    }

//-----------------------------------------------------------------------------------------------


    if(val<601){
        delay(50);
        digitalWrite(RGB3, LOW);
    }
    else{
        digitalWrite(RGB3, HIGH);
        delay(50);
    }
  Serial.print("val = ");       // พิมพ์ข้อมความส่งเข้าคอมพิวเตอร์ "val = "
  Serial.println(val);          // พิมพ์ค่าของตัวแปร val

  lcd.setCursor(3,0);
  lcd.print("Analog: ");
  lcd.print(val);

}
